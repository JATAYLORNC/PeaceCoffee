module.exports = function(sequelize, DataTypes) {
  var users = sequelize.define("users", {
    id: {
      type: DataTypes.INTEGER,
      autoIncrement: true,
      primaryKey: true
      allowNull: false
    },

    email: {
      type: DataTypes.TEXT,
      allowNull: false,
      validate: { len: [0, 100] }
    },

    password: {
      type: DataTypes.TEXT,
      allowNull: false,
      validate: { len: [0, 25] }
    }
  });
  return users;
};
